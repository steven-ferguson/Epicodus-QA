<% if current_user %> 
  <% if @type == 'Question' %>
    $('#form').empty().append("<%= j render('new_comment_form') %>");
  <% else %>
    $('#answer-comment-list-<%= @parent.id %>').append ("<%= j render('new_comment_form') %>");
  <% end %>
<% else %>
  window.location.replace('<% request.base_url %>/users/sign_in');
<% end %>