<div class="row">
	<h2 class="center">Sign up</h2>
</div>

<div class="row">
	<div class="small-12 large-6 large-offset-3 columns">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<div class="row">
				<div class="row">
			  	<%= render 'shared/form_errors', object: resource %>
			  </div>
			  <div class="row">
			  	<div class="small-1 columns"><%= f.label :email, class: "right inline" %></div>
			  	<div class="small-11 columns"><%= f.email_field :email, :autofocus => true %></div>
			  </div>
			  <div class="row">
				  <div class="small-1 columns"><%= f.label :password, class: "right inline" %></div>
				  <div class="small-11 columns"><%= f.password_field :password %></div>
				 </div>
				<div class="row">
			  	<div class="small-1 columns"><%= f.label :password_confirmation, class: "right" %></div>
			  	<div class="small-11 columns"><%= f.password_field :password_confirmation %></div>
			  </div>
			  <div class="row">
			  	<div class="large-offset-4 columns"><%= f.submit "Submit", class: "button" %></div>
			  </div>
			</div>
		<% end %>
	</div>
</div>
