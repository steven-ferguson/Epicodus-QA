<div class="row">
	<h2 class="center">Sign in</h2>
</div>

<div class="row">
	<div class="small-12 large-6 large-offset-3 columns">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "custom") do |f| %>
			<div class="row">
			  <div><%= f.label :email %></div>
			 </div>
			 <div class="row">
			  <div><%= f.email_field :email, :autofocus => true %></div>
			</div>
			<div class="row">
			  <div><%= f.label :password %></div>
			</div>
			<div class="row">
			  <div><%= f.password_field :password %></div>
			</div>
			<div class="row">
			  <% if devise_mapping.rememberable? -%>
			  	<label for="remember_me">
			    	<%= f.check_box :remember_me %>
			    	<span class="custom checkbox"></span>Remember me
			  	</label>
			  <% end -%>
			</div>
			<div class="row">
				<div class="small-6 columns">
					<%= f.submit "Submit", class: "button" %>
				</div>
				<div class="small-6 columns">
					<%= render "devise/shared/links" %>
			  </div>
			</div>
			<div class="row">
				<div class="small-4 columns">
				
				</div>
			</div>
		<% end %>
	</div>
</div>

